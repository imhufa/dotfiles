#---------------------------------------------
# TINT2 CONFIG FILE
#---------------------------------------------
# For more information about tint2, see:
# http://code.google.com/p/tint2/wiki/Welcome
#
# For more info on configuring tint2, see:
# https://code.google.com/p/tint2/wiki/Configure

# Background definitions
# ID 1
rounded = 1
border_width = 0
background_color = #171717 31
border_color = #000000 0

# ID 2 - task active
rounded = 1
border_width = 0
background_color = #171717 75
border_color = #000000 0

# ID 3 - task
rounded = 1
border_width = 0
background_color = #171717 31
border_color = #000000 0

# ID 4
rounded = 1
border_width = 0
background_color = #171717 31
border_color = #000000 0

# ID 5 - taskbar
rounded = 1
border_width = 0
background_color = #171717 31
border_color = #000000 0

# ID 6 - active taskbar
rounded = 1
border_width = 0
background_color = #171717 31
border_color = #000000 0

# ID 7 - tooltip
rounded = 1
border_width = 0
background_color = #171717 31
border_color = #000000 0

# ID 8
rounded = 1
border_width = 0
background_color = #171717 31
border_color = #000000 0

# Panel
panel_monitor = 1
panel_position = center left vertical
panel_items = TSC
panel_size = 17% 17
panel_margin = 1 1
panel_padding = 1 1
panel_dock = 0
background_color = #000000 0
wm_menu = 0
panel_layer = bottom
panel_background_id = 1

# Panel Autohide
#autohide = 0
#autohide_show_timeout = 0.31
#autohide_hide_timeout = 1.3
#autohide_height = 7
#strut_policy = follow_size

# Taskbar
taskbar_mode = multi_desktop
taskbar_padding = 1 1 1
taskbar_background_id = 5
taskbar_active_background_id = 6
taskbar_name = 0
taskbar_name_background_id = 0
taskbar_name_active_background_id = 0
taskbar_name_font = Quicksand Medium Bold 7
taskbar_name_font_color = #FFC0CB 71
taskbar_name_active_font_color = #F212D0 71

# Tasks
urgent_nb_of_blink = 20
task_icon = 1
task_text = 0
task_centered = 1
task_maximum_size = 13 13
task_padding = 1 1
task_background_id = 3
task_active_background_id = 2
task_urgent_background_id = 4
task_iconified_background_id = 3

# Task Icons
task_icon_asb = 57 0 0
task_active_icon_asb = 71 0 0
task_urgent_icon_asb = 71 0 0
task_iconified_icon_asb = 75 0 0

# Fonts
task_font = Quicksand Medium Bold  7
task_font_color = #FFC0CB 57
task_active_font_color = #FFC0CB 100
task_urgent_font_color = #EEFF00 75
task_iconified_font_color = #FFC0CB 57
font_shadow = 0

# Launcher
launcher_padding = 1 1 1
launcher_background_id = 0
launcher_icon_size = 13
# Specify icon theme names with launcher_icon_theme. 
# if you have an XSETTINGS manager running (like xfsettingsd), tint2 will follow your current theme.
launcher_icon_theme = gnome-colors-statler
# Each launcher_item_app must be a full path to a .desktop file
#launcher_item_app = /usr/share/applications/terminator.desktop
#launcher_item_app = /usr/share/applications/xfce4-file-manager.desktop
#launcher_item_app = /usr/share/applications/gedit.desktop
#launcher_item_app = /usr/share/applications/iceweasel.desktop

# System Tray
systray = 1
systray_padding = 1 1 1
systray_sort = top2bottom
systray_background_id = 0
systray_icon_size = 13
systray_icon_asb = 57 0 0

# Clock
time1_format = %H:%M
time1_font = Liberation Sans 7
#time2_format = %A %d %B
#time2_font = Liberation Sans 6
clock_font_color = #b5b5b5 100
clock_padding = 1 1 1
clock_background_id = 0
clock_lclick_command = gsimplecal
clock_rclick_command = gsimplecal

# Tooltips
tooltip = 1
tooltip_padding = 1 1
tooltip_show_timeout = 1.0
tooltip_hide_timeout = 1.0
tooltip_background_id = 7
tooltip_font_color = #FFC0CB 75
tooltip_font = Quicksand Medium Bold 9

# Mouse
mouse_middle = none
mouse_right = toggle
mouse_scroll_up = toggle
mouse_scroll_down = iconify

# Battery
battery = 0
#battery_low_status = 20
#battery_low_cmd = notify-send "battery low"
#battery_hide = 96
#bat1_font = Liberation Mono 8
#bat2_font = Liberation Mono 8
#battery_font_color = #b5b5b5 100
#battery_padding = 2 0
#battery_background_id = 0

# End of config
